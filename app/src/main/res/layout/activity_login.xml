<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.example.batru.gamecaro.ui.LoginActivity">

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_button">

        <Button
            android:id="@+id/btnSignInFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_sign_in"
            android:onClick="onButtonClick"
            android:text="@string/sign_in"
            android:textColor="@color/colorButtonSignInText" />

        <View
            android:layout_width="@dimen/signInMarginWidth"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnSignUpFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_sign_in"
            android:onClick="onButtonClick"
            android:text="@string/sign_up"
            android:textColor="@color/colorButtonSignInText" />
    </LinearLayout>
</LinearLayout>